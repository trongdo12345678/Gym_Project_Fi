@model Gym_Project.Models.Member
@{
	Layout = "_Layout";
}
<div class="main">
	<div class="register-grids">
		<div class="container">
			<form asp-controller="UserLogin" asp-action="Register" method="post">
				<div class="register-bottom-grid">
					<h3>LOGIN INFORMATION</h3>
					<div>
						<span>Email<label></label></span>
						<input type="email" asp-for="Email" placeholder="Email">
					</div>
					<div>
						<span>Phone<label>*</label></span>
						<input type="text" asp-for="Phone" placeholder="Phone">
					</div>
					<div>
						<span>User Name<label>*</label></span>
						<input type="text" asp-for="Username" placeholder="UserName">
						@if (!string.IsNullOrEmpty(ViewBag.UsernameErrorMessage))
						{
							<div style="color: red;">@ViewBag.UsernameErrorMessage</div>
						}
					</div>
					<div>
						<span>Password<label>*</label></span>
						<input type="password" asp-for="Password" placeholder="Password">
					</div>
					<div>
						<span>Confirm Password<label>*</label></span>
						<input type="password" name="confirmPassword" placeholder="Confirm Password">
					</div>
					<div class="clear"> </div>
				</div>
				<div class="clear"> </div>
				<input type="submit" value="submit">
			</form>
		</div>
	</div>
</div>
