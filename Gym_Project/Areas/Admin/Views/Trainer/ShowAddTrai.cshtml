@model Gym_Project.Models.Trainer

@{
	Layout = "_LayoutAdmin";
}
@if (TempData["Mess"] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData["Mess"]
	</div>
}
@section naviheader {

	<!-- Left navbar links -->
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="#" class="nav-link"><b>Add Project</b> </a>
		</li>
	</ul>
}
<form asp-area="Admin" asp-controller="Trainer" asp-action="AddTrainer" enctype="multipart/form-data" method="post">
	<div class="card-body">
		<div class="bs-stepper-content">
			<div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
				<div class="form-group">
					<label for="TrainerName"> Name Trainer</label>
					<input asp-for="TrainerName" type="text" class="mdc-text-field__input form-control" />
					<span class="text-danger">@ViewBag.Mess</span>
				</div>
				<div class="form-group">
					<label for="Email">Email</label>
					<input asp-for="Email" type="email" class="mdc-text-field__input form-control">
				</div>
				<div class="form-group">
					<label for="exampleInputFile">Images Trainer</label>
					<div class="input-group">
						<div class="custom-file">
							<input asp-for="Img" type="text" id="txtImage" class="form-control" />
						</div>
						<div class="input-group-append">
							<label class="btn btn-primary">
								Open file <input type="file" style="display: none;" onchange="handleFileSelect(event)">
							</label>
						</div>		
					</div>
					<span class="text-danger">@ViewBag.Mess</span>
				</div>
				<div class="form-group">
					<label for="Username">Username</label>
					<input asp-for="Username" type="text" class="mdc-text-field__input form-control" />
					<span class="text-danger">@ViewBag.Mess</span>
				</div>
				<div class="form-group">
					<label for="Password">Password</label>
					<input asp-for="Password" type="text" class="mdc-text-field__input form-control" />
					<span class="text-danger">@ViewBag.Mess</span>
				</div>
				<div class="form-group">
					<label for="Phone">Phone</label>
					<input asp-for="Phone" type="text" class="mdc-text-field__input form-control" />
				</div>
				<div class="form-group">
					<label for="RoleId">Role</label>
					<select asp-for="RoleId" class="form-control">
						<option value="">-- Select Role --</option>
						<option value="1">Admin</option>
						<option value="2">Trainer</option>
					</select>
					<span class="text-danger">@ViewBag.Mess</span>
					<span class="text-danger">@Html.ValidationMessageFor(x => x.RoleId)</span>
				</div>
				<div class="form-group">
					<label for="Specialization">Specialization</label>
					<input asp-for="Specialization" type="text" class="mdc-text-field__input form-control" />
					<span class="text-danger">@ViewBag.Mess</span>
				</div>
				<div class="form-group">
					<a asp-action="ShowListTrai" class="btn btn-danger">Exit</a>
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
			</div>
		</div>
	</div>
</form>
@section scripts {

	<script>
		//tải ảnh lên
		function handleFileSelect(event) {
			const files = event.target.files;

			if (files.length > 0) {
				const reader = new FileReader();

				reader.onload = function (e) {
					// Lưu đường dẫn của ảnh vào trường ẩn
					document.getElementById('txtImage').value = e.target.result;
				};

				reader.readAsDataURL(files[0]);
			}
		}
	</script>

}